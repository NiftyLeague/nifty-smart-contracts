{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": { "~/*": ["./src/*"] }
  },
  "include": ["./src/**/*.ts"],
  "files": ["hardhat.config.ts"],
  "exclude": ["node_modules"]
}
