{
  "name": "@niftyleague/smart-contracts",
  "version": "1.0.0",
  "description": "Nifty League Smart Contracts",
  "author": "Nifty Andy",
  "license": "MIT",
  "homepage": "https://github.com/NiftyLeague/nifty-smart-contracts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiftyLeague/nifty-smart-contracts"
  },
  "bugs": {
    "url": "https://github.com/NiftyLeague/nifty-smart-contracts/issues"
  },
  "scripts": {
    "lint:ts": "eslint --ignore-path .eslintignore . --ext .ts,.js --fix",
    "lint:sol": "solhint \"src/contracts/**/*.sol\" --ignore-path .solhintignore",
    "lint": "yarn lint:ts && yarn lint:sol",
    "format:ts": "prettier --ignore-path .prettierignore --write .",
    "format:sol": "prettier --write --plugin=prettier-plugin-solidity \"src/contracts/**/*.sol\"",
    "format": "yarn format:ts && yarn format:sol",
    "type-check": "tsc --noEmit",
    "coverage": "hardhat coverage",
    "test": "hardhat test src/test/*.ts --typecheck --network hardhat",
    "slither": "slither . --checklist --markdown-root ./ > SLITHER.md",
    "compile": "hardhat clean && hardhat compile",
    "build": "npm run compile",
    "export:sepolia": "hardhat deploy --export --network sepolia exports/deployments.sepolia.ts",
    "export:mainnet": "hardhat deploy --export --network mainnet exports/deployments.mainnet.ts",
    "export": "npm run export:sepolia && npm run export:mainnet && prettier --ignore-path .prettierignore --write exports/*.ts",
    "deploy": "hardhat deploy",
    "deploy:hardhat": "hardhat deploy --deploy-scripts src/deploy/hardhat --network hardhat",
    "deploy:tenderly": "hardhat deploy --deploy-scripts src/deploy/remote --network tenderly",
    "deploy:sepolia": "hardhat deploy --deploy-scripts src/deploy/remote --network sepolia",
    "deploy:remote": "hardhat deploy --deploy-scripts src/deploy/remote --network",
    "deploy:ledger": "hardhat deploy --deploy-scripts src/deploy/ledger --network",
    "verify": "hardhat etherscan-verify"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.0.0",
    "@imtbl/contracts": "^2.2.4",
    "@imtbl/imx-contracts": "^1.0.1",
    "@imtbl/imx-sdk": "^3.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@openzeppelin/contracts-upgradeable/v4": "npm:@openzeppelin/contracts-upgradeable@4.9.6",
    "@openzeppelin/contracts-upgradeable/v5": "npm:@openzeppelin/contracts-upgradeable@latest",
    "@openzeppelin/contracts/v4": "npm:@openzeppelin/contracts@4.9.6",
    "@openzeppelin/contracts/v5": "npm:@openzeppelin/contracts@latest",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.4",
    "@types/ramda": "^0.29.12",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "chai": "^4.4.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eth-provider": "^0.13.6",
    "ethers": "^6.9.0",
    "fs": "0.0.1-security",
    "hardhat": "^2.22.2",
    "hardhat-deploy": "^0.12.2",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^2.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "ramda": "^0.29.1",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.0.0"
  },
  "packageManager": "yarn@1.22.22"
}
