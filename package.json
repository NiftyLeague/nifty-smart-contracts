{
  "name": "@niftyleague/smart-contracts",
  "version": "1.0.0",
  "description": "Nifty League Smart Contracts",
  "author": "Nifty Andy",
  "license": "MIT",
  "homepage": "https://github.com/NiftyLeague/NiftySmartContracts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiftyLeague/NiftySmartContracts"
  },
  "bugs": {
    "url": "https://github.com/NiftyLeague/NiftySmartContracts/issues"
  },
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore . --ext .ts,.js",
    "lint:fix": "eslint --ignore-path .eslintignore . --ext .ts,.js --fix",
    "lint:sol": "solhint \"src/contracts/**/*.sol\" --ignore-path .solhintignore",
    "format": "prettier --ignore-path .prettierignore --check .",
    "format:fix": "prettier --ignore-path .prettierignore --write .",
    "type-check": "hardhat test --typecheck",
    "compile": "hardhat clean && hardhat compile",
    "build": "npm run compile",
    "export": "hardhat deploy --export-all ./deployments.json",
    "coverage": "hardhat coverage --network hardhat",
    "test": "hardhat test",
    "deploy": "hardhat deploy",
    "deploy:hardhat": "hardhat deploy --deploy-scripts ./src/deploy/hardhat --network hardhat",
    "deploy:remote": "hardhat deploy --deploy-scripts ./src/deploy/remote --network",
    "deploy:ledger": "hardhat deploy --deploy-scripts ./src/deploy/ledger --network",
    "verify": "hardhat etherscan-verify"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@chainlink/contracts": "^0.6.1",
    "@imtbl/imlogging": "^1.0.37",
    "@imtbl/imx-contracts": "^1.0.1",
    "@imtbl/imx-sdk": "^3.3.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@tenderly/hardhat-tenderly": "^2.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@types/ramda": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "chai": "^4.3.7",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eth-provider": "^0.13.6",
    "ethers": "^6.9.0",
    "fs": "0.0.1-security",
    "hardhat": "^2.19.2",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.12.2",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^2.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "ramda": "^0.29.1",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.11",
    "tenderly": "^0.9.1",
    "ts-command-line-args": "^2.5.1",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.0.0"
  },
  "packageManager": "yarn@1.22.22"
}
